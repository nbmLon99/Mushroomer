<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"

            android:text="제목이 들어갈 곳입니다."
            android:textSize="12sp"
            android:textStyle="bold"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="12dp"
            android:paddingVertical="8dp"

            android:text="내용이 들어갈 곳입니다."
            android:textSize="10sp"
            android:textFontWeight="300"
            android:ellipsize="end"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="bottom|right"
        android:paddingBottom="8dp"
        android:paddingHorizontal="5dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="닉네임123"
            android:textFontWeight="300"
            android:textSize="8sp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10분전"
            android:layout_marginVertical="5dp"
            android:textSize="8sp"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:layout_marginTop="5dp"
            >
            <ImageView
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:src="@drawable/icons_like"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="8sp"
                android:text="3"
                android:textColor="@color/likeRed"
                android:layout_marginRight="3dp"
                />
            <ImageView
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:src="@drawable/icons_chat"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="8sp"
                android:text="1"
                android:textColor="@color/chatPurple"
                android:layout_marginRight="3dp"
                />
        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:padding="5dp"
        android:src="@drawable/example_mushroom"
        android:scaleType="fitXY"
        />
</LinearLayout>