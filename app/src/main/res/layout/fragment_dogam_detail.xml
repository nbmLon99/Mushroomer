<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.dogam.DogamFragment_detail"

    android:padding="15dp"
    >

    <!-- 도감 타이틀 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/titleFrame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toTopOf="parent"
        >
        <TextView
            android:id="@+id/mushName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"

            android:textAlignment="center"
            android:text="송이 버섯"
            android:textSize="25sp"
            android:textStyle="bold"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />
        <TextView
            android:id="@+id/mushNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="No.11"
            android:textSize="16sp"
            android:textStyle="italic|bold"

            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />
        <TextView
            android:id="@+id/mushType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="식용 버섯"
            android:textSize="16sp"
            android:textColor="@color/mainGreen"
            android:textStyle="bold"

            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <!-- 도감 내용 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"

        app:layout_constraintTop_toBottomOf="@id/titleFrame"
        app:layout_constraintBottom_toTopOf="@id/btn_close"
        android:padding="10dp"
        >
        <!-- 특징 -->
        <LinearLayout
            android:id="@+id/contentFrame"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginVertical="10dp"
            android:background="@color/bgGray"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:padding="16dp"
                android:text="@string/content"
                android:textSize="16sp"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/content"
                android:padding="16dp"
                android:text="특징이 들어갈 곳 입니다."
                android:textSize="13sp"
                android:scrollbars="vertical"

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />
        </LinearLayout>


        <!-- 나의 발견 -->
        <LinearLayout
            android:id="@+id/myMushPicturesFrame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:padding="16dp"
                android:text="@string/myMushPictures"
                android:textSize="16sp"
                android:textStyle="bold"
                />
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/myMushPictures"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:orientation="horizontal"

                tools:listitem="@layout/item_mushpictures"
                android:paddingVertical="10dp"
                android:paddingHorizontal="16dp"
                >

            </androidx.recyclerview.widget.RecyclerView>

        </LinearLayout>

        <TextView
            android:id="@+id/rarity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="10dp"

            android:text="전체 사용자 중 20%만이 이 버섯을 발견하였습니다!"
            android:textAlignment="center"
            />


    </LinearLayout>

    <Button
        android:id="@+id/btn_close"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:layout_constraintBottom_toBottomOf="parent"
        android:text="@string/close"
        android:background="@color/mainGreen"
        />
</androidx.constraintlayout.widget.ConstraintLayout>