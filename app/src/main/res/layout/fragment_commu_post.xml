<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.commu.post.CommuFragment_post"
    >
    <data>
        <variable
            name="post"
            type="com.nbmlon.mushroomer.model.Post" />
    </data>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <!-- 제목 영역 -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/titleFrame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/titleGreen"
            >
            <ImageView
                android:id="@+id/btn_back"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:padding="10dp"
                android:layout_marginHorizontal="10dp"

                android:src="@drawable/icons_left_arrow"

                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />

            <TextView
                android:id="@+id/boardType"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="10dp"

                android:text="게시판이름"
                android:textStyle="bold"
                android:textSize="25sp"

                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                >
                <!-- 포스팅 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <LinearLayout
                        android:layout_marginRight="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >
                        <ImageView
                            android:id="@+id/writer_icon"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/icons_profile"
                            setUserIcon="@{post.writer.icon}"
                            />
                        <TextView
                            android:id="@+id/writer_nickname"
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:text="@{post.writer.nickname}"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:textAlignment="center"
                            android:textSize="@dimen/text_small"
                            />
                    </LinearLayout>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="10dp"
                        app:cardCornerRadius="10dp"
                        android:background="@color/bgGray"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:padding="10dp"
                            >
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginBottom="5dp"
                                >
                                <TextView
                                    android:id="@+id/post_title"
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content"

                                    android:text="@{post.title}"
                                    android:textSize="@dimen/text_main"
                                    android:textStyle="bold"
                                    />

                                <ImageView
                                    android:id="@+id/btn_postMore"
                                    android:layout_width="30dp"
                                    android:layout_height="match_parent"
                                    android:padding="5dp"
                                    android:src="@drawable/icons_more" />
                            </LinearLayout>
                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <com.smarteist.autoimageslider.SliderView
                                    android:id="@+id/imageSlider"
                                    android:layout_width="match_parent"
                                    android:layout_marginHorizontal="20dp"
                                    android:layout_height="0dp"
                                    app:layout_constraintDimensionRatio="1"
                                    app:layout_constraintTop_toTopOf="parent"
                                    android:visibility="gone"

                                    app:sliderAnimationDuration="600"
                                    app:sliderAutoCycleDirection="back_and_forth"
                                    app:sliderAutoCycleEnabled="true"
                                    app:sliderIndicatorAnimationDuration="600"
                                    app:sliderIndicatorGravity="center_horizontal|bottom"
                                    app:sliderIndicatorMargin="15dp"
                                    app:sliderIndicatorOrientation="horizontal"
                                    app:sliderIndicatorPadding="3dp"
                                    app:sliderIndicatorRadius="2dp"
                                    app:sliderIndicatorSelectedColor="#5A5A5A"
                                    app:sliderIndicatorUnselectedColor="#FFF"
                                    app:sliderStartAutoCycle="false"
                                    />

                            </androidx.constraintlayout.widget.ConstraintLayout>

                            <TextView
                                android:id="@+id/post_content"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"

                                android:text="@{post.content}"
                                android:paddingVertical="10dp"
                                android:textSize="@dimen/text_sub"
                                />
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="right"
                                >
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/text_small"
                                    android:textColor="@color/likeRed"
                                    android:text="@{Integer.toString(post.thumbsUpCount)}"
                                    />
                                <ImageView
                                    android:layout_width="10dp"
                                    android:layout_height="10dp"
                                    android:layout_gravity="bottom"
                                    android:src="@drawable/icons_like_emp"
                                    android:layout_marginLeft="5dp"
                                    android:layout_marginRight="10dp"
                                    />
                                <TextView
                                    android:id="@+id/post_time"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="right"
                                    android:textSize="@dimen/text_small"
                                    android:textFontWeight="300"
                                    app:setTimeRelatively="@{post.time}"
                                    />
                            </LinearLayout>
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <!-- 댓글 -->
                <androidx.recyclerview.widget.RecyclerView
                    android:padding="10dp"
                    android:id="@+id/commentRV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"

                    android:nestedScrollingEnabled="false"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:listitem="@layout/item_post_comment"
                    />
            </LinearLayout>



        </androidx.core.widget.NestedScrollView>


        <!-- 답글 달기 대상 -->
        <LinearLayout
            android:id="@+id/reply_target_frame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:background="@color/bgGray"
            >
            <ImageView
                android:id="@+id/replyIcon"
                android:layout_width="15dp"
                android:layout_height="15dp"

                android:layout_marginHorizontal="10dp"
                android:src="@drawable/icons_reply"
                android:layout_gravity="bottom"
                android:layout_marginLeft="10dp"
                />
            <TextView
                android:id="@+id/reply_target_content"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:maxLines="1"
                android:ellipsize="end"
            />
            <ImageView
                android:id="@+id/reply_cancel"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:padding="3dp"
                android:src="@drawable/icons_close"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_comment"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@color/bgGray"
                android:layout_marginLeft="20dp"
                />

            <ImageView
                android:id="@+id/btn_send"
                android:layout_width="50dp"
                android:layout_height="35dp"
                android:src="@drawable/icons_send"
                android:padding="5dp"
                />


        </LinearLayout>



    </LinearLayout>


</layout>